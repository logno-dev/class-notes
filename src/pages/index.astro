---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import ResourceList from '../components/ResourceList.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';


---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />
		<div class="flex center">
			<img src="banner2.png" class="banner">
		</div>
		<main>
			<section>
				<h5>
Welcome! Take advantage of some of the quick resources below, or head over to the <a href="/notes">notes page</a> for in-depth lessons and reference sheets.
				</h5>
			</section>
			<section class="resource-list">
				<h2>Quick Resources</h2>
<ResourceList />
			</section>
		</main>
		<Footer />
	</body>
</html>


	<style>
main {
	display: flex;
	flex-direction: column;
	gap: 2rem;
}

.resource-list {
	display: flex;
	flex-direction: column;
	gap: 2rem;
}

.banner {
	width: 100dvw;
	max-width: 1080px;
	border-radius: 32px;
}
	</style>
